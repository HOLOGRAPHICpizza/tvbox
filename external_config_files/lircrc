begin
	prog = irexec
	button = KEY_POWER
	config = sudo halt
end

begin
	prog = irexec
	button = KEY_0
	config = pkill -f 'python.*tvbox.*'
end

begin
	prog = irexec
	button = KEY_1
	config = systemd-run --user /home/michael/tvbox/irtvboxlaunch
end

begin
	prog = irexec
	button = KEY_2
	config = tail -n 100 /home/michael/tvbox/tvbox.log > /home/michael/tvbox/log_dumps/`date +%s`.log; logger "tvbox log dumped"; notify-send "tvbox log dumped"
end

begin
	prog = irexec
	button = KEY_9
	config = pkill -f -9 'python.*tvbox.*'
end

